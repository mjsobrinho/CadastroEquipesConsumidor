@model CadastroEquipesConsumidor.Models.ErrorViewModel

<h1>Erro:</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}
else
{
    <p>Ocorreu um erro inesperado.</p>
}

@if (Model.ShowRequestId)
{
    <p>
        <strong>ID da requisição:</strong> <code>@Model.RequestId</code>
    </p>
}
